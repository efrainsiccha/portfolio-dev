---
const { link } = Astro.props;
const isLink = Boolean(link);
---

{isLink ? (
  <a
    href={link}
    class="inline-flex items-center justify-center px-6 py-2 text-xs font-semibold duration-300 ease-out border rounded-lg bg-neutral-900 dark:bg-white dark:text-neutral-900 text-neutral-100 hover:border-neutral-700 border-neutral-900 dark:hover:border-neutral-300 hover:bg-white dark:hover:bg-black dark:hover:text-white hover:text-neutral-900"
  >
    <slot />
  </a>
) : (
  <button
    type="button"
    class="inline-flex items-center justify-center px-6 py-2 text-xs font-semibold duration-300 ease-out border rounded-lg bg-neutral-900 dark:bg-white dark:text-neutral-900 text-neutral-100 hover:border-neutral-700 border-neutral-900 dark:hover:border-neutral-300 hover:bg-white dark:hover:bg-black dark:hover:text-white hover:text-neutral-900"
  >
    <slot />
  </button>
)}
